export const getExercisesForDay = (dayId) => {
    const day = WORKOUT_SCHEDULE.find(d => d.id === dayId);
    if (!day || day.id === 'sun') return [];

    let exercises = [];
    day.focus.forEach(group => {
        if (group === 'Cardio' || group === 'Rest') return;

        // Filter out day-specific exercises if not the right day
        // Also handle 'Fat Loss' if we ever add it to schedule, but currently it's just in gallery
        if (EXERCISES[group]) {
            const groupExercises = EXERCISES[group].filter(ex => !ex.daySpecific || ex.daySpecific === dayId);
            exercises = [...exercises, ...groupExercises.map(ex => ({
                ...ex,
                group,
                id: ex.name.replace(/\s+/g, '-').toLowerCase()
            }))];
        }
    });

    return exercises;
};
